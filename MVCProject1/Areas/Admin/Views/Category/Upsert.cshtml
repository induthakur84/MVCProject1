@model MVCProject1.Models.Category

@{
    var title = Model.Id != 0 ? "Edit Category" : "New Category";
}

<form method="post">
    <div asp-validation-summary="None" class="text-danger"></div>
    <div class="row border p-3">
        <div class="col-6">
            <h2 class="text-primary border-bottom">@title</h2>
        </div>
        <div class="col-8">
            <div class="form-group row p-2 m-2">
                <div class="col-3">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-6 offset-3">
                    @if (Model.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
                @*<div class="col-3 offset-3">
                <button class="btn btn-info form-control" type="submit">
                @(Model.Id !=0?"Update":"Save")
                </button>
                </div>
                <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                </div>*@
            </div>
        </div>
    </div>
</form>
@section scripts
    {
    <partial name="_ValidationScriptsPartial" />
}